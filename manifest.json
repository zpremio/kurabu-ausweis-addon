{
  "manifest_version": 2,
  "name": "Kurabu Mitgliedsausweis Generator",
  "version": "1.5.0",
  "description": "Generiert druckbare Mitgliedsausweise mit QR-Code aus Kurabu-Profilen",
  "author": "Sven Ebensen / Bremen 1860",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "*://*.kurabu.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Mitgliedsausweis erstellen",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.kurabu.com/*/admin/members/*"],
      "js": ["lib/jspdf.umd.min.js", "lib/qrcode.min.js", "font/uniformpro-fonts.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "lib/qrcode.min.js",
    "lib/jspdf.umd.min.js"
  ],
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "kurabu-ausweis@bremen1860.de",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
